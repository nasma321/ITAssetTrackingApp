@model ITAssetTrackingApp.Models.Asset

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Asset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssetNumber" class="control-label"></label>
                <input asp-for="AssetNumber" class="form-control" />
                <span asp-validation-for="AssetNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetType" class="control-label"></label>
                <select asp-for="AssetType" class="form-control">
                    <option value="">-- Select Asset Type --</option>
                    <option value="Monitor">Monitor</option>
                    <option value="CPU">CPU</option>
                    <option value="Keyboard">Keyboard</option>
                    <option value="Mouse">Mouse</option>
                    <option value="Printer">Printer</option>
                </select>
                <span asp-validation-for="AssetType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="Assigned">Assigned</option>
                    <option value="Not Assigned">Not Assigned</option>
                    <option value="Discarded">Discarded</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchasedDate" class="control-label"></label>
                <input asp-for="PurchasedDate" class="form-control" />
                <span asp-validation-for="PurchasedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscardedDate" class="control-label"></label>
                <input asp-for="DiscardedDate" class="form-control" />
                <span asp-validation-for="DiscardedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedStaffId" class="control-label"></label>
                <select asp-for="AssignedStaffId" class ="form-control" asp-items="ViewBag.AssignedStaffId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssignedDate" class="control-label"></label>
                <input asp-for="AssignedDate" class="form-control" />
                <span asp-validation-for="AssignedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastReturnedDate" class="control-label"></label>
                <input asp-for="LastReturnedDate" class="form-control" />
                <span asp-validation-for="LastReturnedDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
